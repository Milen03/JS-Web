
        <section class="search-container">
            <h2>Search Recipes</h2>
            <form action="/recipes/search">
                <input type="text" id="search" name="search" value="{{filter.search}}" placeholder="Search for recipes...">
                <button type="submit">Search</button>
            </form>
            <div class="search-results">
                 {{#each recipes}}
                    <article class="recipe">
                <img src="{{image}}">
                <h3>{{title}}</h3>
                <p>{{description}}</p>
                <a href="/recipes/{{id}}/details">Read More</a>
            </article>
                  {{else}}

                <!-- Add more search results here -->

                 <p class="no-match">There are no recipes found yet!</p> 
                 {{/each}}
            </div>
        </section>
    </main>

