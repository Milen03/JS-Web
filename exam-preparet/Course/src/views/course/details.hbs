
        <div class="details-container">
  <div class="details-container-image">
    <img src="{{course.image}}" alt="{{course.title}}">
  </div>
  <div class="details-container-info">
    <h2>Title: {{course.title}}</h2>
    <h3>Type: {{course.type}}</h3>
    <h3>Certificate: {{course.certificate}}</h3>
    <h3>Price: €{{course.price}}</h3>
    <h3>By: {{course.owner.email}}</h3>
    
    {{!-- Проверяваме дали има потребители в списъка за записване --}}
    {{#if course.signUpList.[0]}}
      <h4>Signed By: 
        {{#each course.signUpList}}
          {{this.username}}{{#unless @last}}, {{/unless}}
        {{/each}}
      </h4>
    {{else}}
      <h4>Nobody has signed in for this course yet</h4>
    {{/if}}
  </div>
  <div class="details-container-content">
    <p>{{course.description}}</p>
  </div>
  <div class="btn-container">
    {{!-- Ако текущият потребител е създателят на курса --}}
    {{#if isCreator}}
      <a href="/courses/{{course._id}}/edit">Edit</a>
      <a href="/courses/{{course._id}}/delete">Delete</a>
    {{/if}}

    {{!-- Ако има влязъл потребител и не е създател --}}
    {{#if user}}
      {{#unless isCreator}}
        {{#if hasPreferred}}
          <p class="sign-up">You've already signed up for this course!</p>
        {{else}}
          <a href="/courses/{{course._id}}/signUp">Sign up</a>
        {{/if}}
      {{/unless}}
    {{/if}}
  </div>
</div>
